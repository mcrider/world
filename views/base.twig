{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#main">{{ _e( 'Skip to content') }}</a>
		<header class="row" >
			{% block header %}
				<h1 role="banner">
					<a href="{{site.url}}" rel="home">{{site.name}}</a>
				</h1>
				<nav id="nav-main" class="nav-main" role="navigation">
					{% include "menu.twig" with {'items': menu.get_items} %}
				</nav><!-- #nav -->
			{% endblock %}
		</header>

		<main id="main" role="main">
			{% if title %}
				<div class="row">
					<h2>{{title}}</h2>{% endif %}
				</div>
			{% block content %}
				Sorry, no content
			{% endblock %}
		</main>

		{% block footer %}
			{% include 'footer.twig' %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
